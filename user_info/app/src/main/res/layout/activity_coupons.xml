<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出行卡"
                android:textColor="#757575"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- 分类标签 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5F5F5"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="全部(6)"
                    android:textColor="#FF5722"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="出行(1)"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="车主(5)"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="送货/快递(0)"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="金融"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- 省钱周卡广告 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF8F0"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省钱周卡"
                android:textColor="#FF5722"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送您15元快车券×7张"
                android:textColor="#212121"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15元"
                    android:textColor="#FF5722"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="激活额度即可得"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_orange_round_button"
                    android:paddingHorizontal="16dp"
                    android:text="去领取"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 出行分类 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="出行"
            android:textColor="#212121"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="#F5F5F5"/>

        <!-- 打车优惠券 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打车"
                android:textColor="#757575"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="惊喜券"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.5折"
                    android:textColor="#FF5722"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="限领取后首次支付的快车..."
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅剩04:37:23"
                    android:textColor="#FF5722"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:background="@drawable/bg_orange_round_button"
                    android:paddingHorizontal="16dp"
                    android:text="立即使用"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 车主分类 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="车主"
            android:textColor="#212121"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="#F5F5F5"/>

        <!-- 代驾优惠券1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代驾"
                android:textColor="#757575"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代驾·新客券"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5折"
                    android:textColor="#FF5722"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="限滴滴代驾新用户、特惠代驾服务使用"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2025-05-19 23:59:59到期"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_orange_round_button"
                android:paddingHorizontal="16dp"
                android:text="立即使用"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 代驾优惠券2 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"/>

        <!-- 底部导航栏 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代驾"
                android:textColor="#757575"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代驾·新客券"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥20"
                    android:textColor="#FF5722"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="限滴滴代驾新用户使用"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2025-05-19 23:59:59到期"
                android:textColor="#757575"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_orange_round_button"
                android:paddingHorizontal="16dp"
                android:text="立即使用"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 底部导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_buy_coupon"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_get_coupon"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_save_money"
                android:scaleType="centerInside"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_exchange_coupon"
                android:scaleType="centerInside"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>