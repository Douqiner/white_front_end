<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="ShapeAppearance.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.MaterialComponents.ProgressIndicator">
        <item name="trackThickness">6dp</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/primary_light</item>
    </style>
</resources>